    var produtos = [];
    var valor_estoque = 0;
    function cadastrar(){
        produtos.push(preco.value);
        valor_estoque += Number(preco.value);
    }

    function atualizar(){
        divi.innerHTML = `<b>Você tem ${produtos.length} produtos cadastrados em estoque <br> Seu estoque vale R$${valor_estoque.toFixed(2)}`;
